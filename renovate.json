{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* 0-3 1 * *"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "All non-major dependencies",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "extends": ["config:recommended"],
  "rangeStrategy": "pin"
}
